{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": false,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@Presentation/*": [
        "src/presentation/*"
      ],
      "@Domain/*": [
        "src/domain/*"
      ],
      "@Infra/*": [
        "src/infra/*"
      ],
      "@Main/*": [
        "src/main/*"
      ],
      "@config/*": [
        "src/main/config/*"
      ],
      "@CrossCuting": [
        "./src/crossCuting",
      ]
    }
  },
  "include": [
    "src/**/*",
  ],
}